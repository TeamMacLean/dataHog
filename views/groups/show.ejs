<% include ../head %>

<div class="container">

    <h3><a href="/"><i class="fa fa-chevron-left"></i> Labs</a></h3>

    <h1><%- group %></h1>

    <a class="button button-primary" href="/new"><i class="fa fa-plus"></i> new project</a>


    <div class="row">
        <% var i = 0; %>
        <% projects.map(function(project){ %>
        <% i++; %>
        <div class="col6">
            <a href="/<%- project.safeName %>">
                <div class="tile">
                    <div class="title">
                        <%- project.name %>
                    </div>

                    <div class="sub-title">
                        <%- project.responsiblePerson %>
                    </div>
                </div>
            </a>
        </div>
        <% if (i % 2 == 0){ %>
        <div class="clearfix"></div>
        <% } %>
        <% }); %>
    </div>
</div>

<% include ../foot %>