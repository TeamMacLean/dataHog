<% include ../head %>

<div class="container">

    <h2>Groups</h2>

    <div class="row">
        <% var i = 0; %>
        <% groups.map(function(group){ %>
        <% i++; %>
        <div class="col6">
            <a href="/<%- group.safeName %>">
                <div class="tile">
                    <div class="title">
                        <%- group.name %>
                    </div>

                </div>
            </a>
        </div>
        <% if (i % 2 == 0){ %>
        <div class="clearfix"></div>
        <% } %>
        <% }); %>
    </div>
</div>

<% include ../foot %>