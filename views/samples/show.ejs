<% include ../head %>
<div class="container">
    <h3><a href="/<%- sample.project.safeName %>"><i class="fa fa-chevron-left"></i> <%- sample.project.name %></a></h3>


    <h2><%- sample.name %></h2>

    <label>Unique name</label>

    <p><%- sample.uniqueName %></p>
    <label>Organism</label>

    <p><%- sample.organism %></p>
    <label>NCBI</label>

    <p><%- sample.ncbi %></p>
    <label>Conditions</label>

    <p><%- sample.conditions %></p>


    <a class="button button-primary" href="/<%- sample.project.safeName %>/<%- sample.safeName %>/new"><i
                class="fa fa-plus"></i>
        add read
        data</a>

    <div class="row">
        <% var i = 0; %>
        <% if(sample.runs) sample.runs.map(function(read){ %>
        <% i++; %>
        <div class="col6">
            <a href="/<%- sample.project.safeName %>/<%- sample.safeName %>/<%- read.safeName %>">
                <div class="tile">
                    <!--<i class="fa fa-cube"></i>--> <%- read.name %>
                </div>
            </a>
        </div>
        <% if (i % 2 == 0){ %>
        <div class="clearfix"></div>
        <% } %>
        <% }); %>
    </div>

</div>

<% include ../foot %>