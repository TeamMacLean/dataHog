<% include ../head %>
<div class="container">
    <h3><a href="/<%- project.id %>"><i class="fa fa-chevron-left"></i> <%- project.name %></a></h3>

    <h1>New run</h1>

    <form action="/<%- project.id %>/new" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter run name" required>
        </div>
        <button type="submit" class="btn btn-success">Add</button>
    </form>

</div>


