<% include ../head %>
<div class="container">
    <h3><a href="/<%- project.id %>"><i class="fa fa-chevron-left"></i> <%- project.name %></a></h3>

    <h1>New run</h1>

    <form action="/<%- project.id %>/new" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter run name" required>
        </div>

        <div class="form-group">
            <label for="sequencingProvider">sequencingProvider</label>
            <input type="text" class="form-control" id="sequencingProvider" name="sequencingProvider"
                   placeholder="Enter sequencingProvider">
        </div>

        <div class="form-group">
            <label for="sequencingTechnology">sequencingTechnology</label>
            <input type="text" class="form-control" id="sequencingTechnology" name="sequencingTechnology"
                   placeholder="Enter sequencingTechnology">
        </div>

        <div class="form-group">
            <label for="communicationExcerpts">communicationExcerpts</label>
            <input type="text" class="form-control" id="communicationExcerpts" name="communicationExcerpts"
                   placeholder="Enter communicationExcerpts">
        </div>

        <div class="form-group">
            <label for="sequencingProviderDatasheets">sequencingProviderDatasheets</label>
            <input type="text" class="form-control" id="sequencingProviderDatasheets"
                   name="sequencingProviderDatasheets" placeholder="Enter sequencingProviderDatasheets">
        </div>

        <div class="form-group">
            <label for="libraryInformation">libraryInformation</label>
            <textarea class="form-control" rows="3" id="libraryInformation" name="libraryInformation"
                      placeholder="Enter libraryInformation" required></textarea>
        </div>

        <div class="form-group">
            <label for="libraryType">libraryType</label>

            <select id="libraryType" name="libraryType" class="form-control" required>
                <option>paired</option>
                <option>mate</option>
                <option>unpaired</option>
            </select>
        </div>

        <div class="form-group">
            <label for="submissionToPublicPortal">submissionToPublicPortal</label>
            <input type="text" class="form-control" id="submissionToPublicPortal" name="submissionToPublicPortal"
                   placeholder="Enter submissionToPublicPortal">
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" id="galaxyDataWanted" name="galaxyDataWanted"> galaxyDataWanted
            </label>
        </div>

        <button type="submit" class="btn btn-success">Add</button>
    </form>

</div>


<% include ../foot %>