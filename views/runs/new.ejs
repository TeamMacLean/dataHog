<% include ../head %>
<div class="container">
    <h3><a href="/<%- sample.project.safeName %>/<%- sample.safeName %>"><i
                    class="fa fa-chevron-left"></i> <%- sample.name %></a></h3>

    <h1>New run</h1>

    <form action="/<%- sample.project.safeName %>/<%- sample.safeName %>/new" method="POST"
          enctype="multipart/form-data">

        <fieldset>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required>
        </fieldset>

        <fieldset>
            <label for="libraryType">library Type</label>
            <select id="libraryType" name="libraryType" required>
                <option value="">Select type</option>
                <option>paired</option>
                <option>mate</option>
                <option>unpaired</option>
            </select>
        </fieldset>

        <fieldset>
            <label for="sequencingProvider">Sequencing Provider</label>
            <input type="text" id="sequencingProvider" name="sequencingProvider" required>
        </fieldset>

        <fieldset>
            <label for="sequencingTechnology">Sequencing Technology</label>
            <input type="text" id="sequencingTechnology" name="sequencingTechnology" required>
        </fieldset>

        <fieldset>
            <label for="insertSize">Insert Size</label>
            <input type="number" id="insertSize" name="insertSize" required>
        </fieldset>

        <fieldset>
            <label for="communicationExcerpts">Communication Excerpts</label>
            <input type="text" id="communicationExcerpts" name="communicationExcerpts" required>
        </fieldset>

        <fieldset>
            <label for="sequencingProviderDataSheet">Sequencing Provider Datasheet</label>
            <input type="text" id="sequencingProviderDataSheet"
                   name="sequencingProviderDataSheet" required>
        </fieldset>

        <fieldset>
            <label for="libraryInformation">Library Information</label>
            <textarea rows="3" id="libraryInformation" name="libraryInformation"
                      required></textarea>
        </fieldset>

        <fieldset>
            <label for="submissionToPublicPortal">Submission To Public Portal</label>
            <input type="text" id="submissionToPublicPortal" name="submissionToPublicPortal" required>
        </fieldset>

        <fieldset>
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="submissionToGalaxy" name="submissionToGalaxy"> Add data to <a
                            href="http://galaxy.tsl.ac.uk" target="_blank">Galaxy</a>
                </label>
            </div>
        </fieldset>

        <div>

            <div id="filesRoot">

            </div>
            <input class="button addFileInput" type="button" value="Add more files">

        </div>

        <button type="submit" class="button button-primary">Add</button>
    </form>

</div>


<% include ../foot %>