<% include ../head.ejs %>
<div class="container">
    <h3><a href="/<%- selectedGroup.safeName %>"><i class="fa fa-chevron-left"></i> Back to projects</a></h3>

    <h2>New project</h2>

    <form action="/<%- selectedGroup.safeName %>/new" method="POST" enctype="multipart/form-data">

        <fieldset>
            <label for="name">Name of project
                <i class="fa fa-info-circle tooltip" title="This is a tool tip!"></i>
            </label>
            <input type="text" id="name" name="name" required>
        </fieldset>

        <fieldset>
            <label for="responsiblePerson">Data owner's TSL email address
                <i class="fa fa-info-circle tooltip" title="This is a tool tip!"></i>
            </label>
            <input type="email" id="responsiblePerson" name="responsiblePerson" value="<%- locals.signedInUser.mail %>"
                   required>
        </fieldset>

        <fieldset>
            <label for="secondaryContact">Secondary Contact's TSL email address
                <i class="fa fa-info-circle tooltip" title="This is a tool tip!"></i>
            </label>
            <input type="email" id="secondaryContact" name="secondaryContact">
        </fieldset>

        <fieldset>
            <label for="shortDescription">Short description of the project
                <i class="fa fa-info-circle tooltip" title="This is a tool tip!"></i>
            </label>
            <input type="text" id="shortDescription" name="shortDescription" required></textarea>
        </fieldset>
        <fieldset>
            <label for="longDescription">Long description of the project
                <i class="fa fa-info-circle tooltip" title="This is a tool tip!"></i>
            </label>
            <textarea rows="3" id="longDescription" name="longDescription" required></textarea>
        </fieldset>

        <fieldset class="file-group" id="additionalDataDiv">
            <label>Supporting files
                <i class="fa fa-info-circle tooltip" title="This is a tool tip!"></i>
            </label>

            <div id="additionalData">
            </div>

        </fieldset>

        <button type="submit" class="button button-primary">Add</button>
    </form>

</div>

<script>
    var additional = document.getElementById('additionalData');
    var addtionalLoader = fileUploader(additional, false, 'additional').setMin(0).setAcceptedTypes(['.png']);

</script>


