<% include ../head %>
<div class="container">
    <h3><a href="/"><i class="fa fa-chevron-left"></i> Projects</a></h3>


    <h2><%- project.name %></h2>


    <label>Safe Name:</label>

    <p><%- project.safeName %></p>


    <label>Group:</label>

    <p><a href="/groups/<%- project.group %>"><%- project.group %></a></p>

    <label>Responsible Person:</label>

    <p><%- project.responsiblePerson %></p>

    <label>Short Description:</label>

    <p><%- project.shortDescription %></p>

    <label>Long Description:</label>

    <p><%- project.longDescription %></p>

    <a class="button button-primary" href="/<%- project.safeName %>/new"><i class="fa fa-plus"></i> new sample</a>

    <div class="row">
        <% var i = 0; %>
        <% if(project.samples) project.samples.map(function(sample){ %>
        <% i++; %>
        <div class="col6">
            <a href="/<%- project.safeName %>/<%- sample.safeName %>">
                <div class="tile">
                    <span><%- sample.name %></span>
                </div>
            </a>
        </div>
        <% if (i % 2 == 0){ %>
        <div class="clearfix"></div>
        <% } %>
        <% }); %>
    </div>
    <div class="row">
        <% unknownFolders.map(function(folder){ %>
        <div class="col6 auto-clear">
            <div class="tile disabled">
                <div class="title">
                    <span><%- folder %></span>
                </div>
                <div class="sub-title">
                    <span>Unknown Folder</span>
                </div>
            </div>
        </div>
        <% }); %>
    </div>


</div>

<% include ../foot %>