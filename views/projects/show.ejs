<% include ../head %>
<div class="container">
    <h3><a href="/"><i class="fa fa-chevron-left"></i> Projects</a></h3>

    <h1><%- project.name %></h1>


    <div class="">
        <h4>Safe Name: <%- project.safeName %></h4>
        <h4>Lab: <a href="/lab/<%- project.lab %>"><%- project.lab %></a></h4>
        <h4>Responsible Person: <%- project.responsiblePerson %></h4>
        <h4>Description: <%- project.description %></h4>
    </div>

    <a class="button button-primary" href="/<%- project.id %>/new"><i class="fa fa-plus"></i> new run</a>

    <div class="row">
        <% var i = 0; %>
        <% if(project.runs) project.runs.map(function(run){ %>
        <% i++; %>
        <div class="col6">
            <a href="/<%- project.id %>/<%- run.id %>">
                <div class="tile">
                    <%- run.name %>
                </div>
            </a>
        </div>
        <% if (i % 2 == 0){ %>
        <div class="clearfix"></div>
        <% } %>
        <% }); %>
    </div>


</div>

<% include ../foot %>