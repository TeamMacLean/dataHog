<% include ../head %>
<div class="container">
    <h3><a href="/<%- project.group.safeName %>"><i class="fa fa-chevron-left"></i> Back to
            group: <%- project.group.name %></a>
    </h3>


    <h2><%- project.name %></h2>

    <label>Group:</label>

    <p><a href="/<%- project.group.safeName %>"><%- project.group.name %></a></p>

    <label>Responsible Person:</label>

    <p><a href="mailto:<%- project.responsiblePerson %>"><%- project.responsiblePerson %></a></p>

    <label>Short Description:</label>

    <p><%- project.shortDescription %></p>

    <label>Long Description:</label>

    <p><%- project.longDescription %></p>

    <label>Path:</label>

    <p><%- project.hpcPath(); %></p>

    <label>Additional Files:</label>
    <%
    if(project.additionalFiles && project.additionalFiles.length > 0){
    project.additionalFiles.map(function(file){
    %>
    <p><i class="fa fa-file-o"></i> <a href="/additional/<%- file.id %>/download"><%- file.name %></a></p>
    <%
    });
    } else { %>
    <p>none</p>
    <% } %>

    <a class="button button-primary" href="/<%- project.group.safeName %>/<%- project.safeName %>/new"><i
                class="fa fa-plus"></i> Add sample</a>

    <div class="row">
        <% var i = 0; %>
        <% if(project.samples) project.samples.map(function(sample){ %>
        <% i++; %>
        <div class="col6">
            <a href="/<%- project.group.safeName %>/<%- project.safeName %>/<%- sample.safeName %>">
                <div class="tile">
                    <div class="title">
                        <%- sample.name %>
                    </div>
                    <div class="sub-title">
                        Sample
                    </div>

                </div>
            </a>
        </div>
        <% if (i % 2 == 0){ %>
        <div class="clearfix"></div>
        <% } %>
        <% }); %>
    </div>


</div>

<% include ../foot %>